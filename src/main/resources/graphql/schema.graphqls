type Query {
    users: [User!]
    user(id: ID!): User

    todos: [ToDo!]
    todo(id: ID!): ToDo
}

"""
ユーザー
"""
type User {
    id: ID!

    """
    ユーザー名
    """
    name: String!

    """
    タスク一覧
    """
    todos: [ToDo!]
}

"""
タスク
"""
type ToDo {
    id: ID!

    """
    説明
    """
    summary: String!

    """
    ユーザーID
    """
    userId: String!
}